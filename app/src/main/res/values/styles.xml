<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SingleCheckpoint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/checkpoint_disable</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_single_checkpoint</item>
        <item name="android:drawablePadding">@dimen/single_checkpoint_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
